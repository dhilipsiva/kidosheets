root = true

[*]
end_of_line = lf
insert_final_newline = false

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
indent_style = space

[*.py]
# Make sure this matches `tool.isort` in pyproject.toml
charset = utf-8
ensure_newline_before_comments = true
force_grid_wrap = 0
include_trailing_comma = true
indent_size = 4
indent_style = space
line_length = 88
multi_line_output = 3
use_parentheses = true
